<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/toastr/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/faicon/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/lightbox2/css/lightbox.min.css" />
    <link rel="stylesheet" href="~/Content/Alert.css" />
</head>
<body>
    <div style="height:100vh" class="d-flex flex-column">
        <div class="d-flex justify-content-between align-items-center">
            @RenderSection("header", false)
            <div class="d-md-flex justify-content-md-end">
                @if (User.IsInRole("TransactionManage"))
                {
                    <a href="/Transaction" class="btn btn-info btn-sm m-2" style="margin:5px"><i class="fa fa-home" aria-hidden="true"></i> <b>Transaction</b></a>
                }
                @if (User.IsInRole("PlayerManage"))
                {
                    <a href="/Player" class="btn btn-info btn-sm m-2 text-white"><i class="fa fa-list" aria-hidden="true"></i> <b>Player</b> <span id="customerStt"></span></a>
                }
                @if (User.IsInRole("DepositManage"))
                {
                    <a href="/Deposit" class="btn btn-info btn-sm m-2"><i class="fa fa-arrow-down" aria-hidden="true"></i> <b>Deposit</b> <span id="napStt"></span></a>
                }
                @if (User.IsInRole("WithdrawManage"))
                {
                    <a href="/Withdraw" class="btn btn-info btn-sm m-2"><i class="fa fa-arrow-up" aria-hidden="true"></i> <b>Withdraw</b> <span id="rutStt"></span></a>
                }
                @if (User.IsInRole("UserManage")
                    || User.IsInRole("BankManage")
                    || User.IsInRole("RoleManage")
                    || User.IsInRole("VipConfigManage")
                    || User.IsInRole("PromptPlayerManage")
                    || User.IsInRole("LogManage")
                    || User.IsInRole("RecommendManage")
                    || User.IsInRole("TemplateManage")
                    )
                {
                    <div class="dropdown">
                        <button class="btn btn-info btn-sm dropdown-toggle  m-2" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-cogs" aria-hidden="true"></i> <b>Config</b>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @if (User.IsInRole("UserManage"))
                            {
                                <a href="/User" class="dropdown-item"><i class="fa fa-users" aria-hidden="true"></i> <b>User Manage</b></a>
                            }
                            @if (User.IsInRole("BankManage"))
                            {
                                <a href="/BankConfig" class="dropdown-item"><i class="fa fa-university" aria-hidden="true"></i> <b>Bank Manage</b></a>
                            }
                            @if (User.IsInRole("RoleManage"))
                            {
                                <a href="/Role/Index" class="dropdown-item"><i class="fa fa-cogs" aria-hidden="true"></i> <b>Role Manage</b></a>
                            }
                            @if (User.IsInRole("PermissionManage"))
                            {
                                <a href="/Permission/Index" class="dropdown-item"><i class="fa fa-cogs" aria-hidden="true"></i> <b>Permission Manage</b></a>
                            }
                            @if (User.IsInRole("VipConfigManage"))
                            {
                                <a href="/VipConfig/Index" class="dropdown-item"><i class="fa fa-cogs" aria-hidden="true"></i> <b>VIP Config</b></a>
                            }
                            @if (User.IsInRole("PromptPlayerManage"))
                            {
                                <a href="/Prompt/Index" class="dropdown-item"><i class="fa fa-bell" aria-hidden="true"></i> <b>Prompt Player</b></a>
                            }
                            @if (User.IsInRole("LogManage"))
                            {
                                <a href="/Log/Index" class="dropdown-item"><i class="fa fa-database" aria-hidden="true"></i> <b>Log</b></a>
                            }
                            @if (User.IsInRole("RecommendManage"))
                            {
                                <a href="/ContentRecommend/Index" class="dropdown-item"><i class="fa fa-bars" aria-hidden="true"></i> <b>Recommend</b></a>
                            }
                            @if (User.IsInRole("TemplateManage"))
                            {
                                <a href="/Template/Index" class="dropdown-item"><i class="fa fa-code" aria-hidden="true"></i> <b>Template</b></a>
                            }
                        </div>
                    </div>
                }
                <a href="/Account/Logout" class="btn btn-danger btn-sm m-2"><b>@User.Identity.Name.ToUpper()</b> | <i class="fa fa-sign-out" aria-hidden="true"></i></a>
            </div>
        </div>
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.5.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/loading.jquery.js" type="text/javascript"></script>
    <script src="~/Scripts/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/toastr/toastr.min.js" type="text/javascript"></script>
    <script src="~/Content/toastr/toastrOption.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Alert.js"></script>
    @RenderSection("script", false)
    <script type="text/javascript" src="~/Scripts/Hub.js"></script>
</body>
</html>