@model FT_Admin.Models.ViewModel.PlayerViewModel
<div>
    <div class="d-flex flex-column">
        @Html.TextBoxFor(t => t.Id, new { hidden = "hidden" })
        <label>
            <i>AccountName:</i>
            @Html.TextBoxFor(t => t.AccountName, new { @class = "form-control" })
        </label>
        <label>
            <i>FullName:</i>
            @Html.TextBoxFor(t => t.FullName, new { @class = "form-control" })
        </label>
        <label>
            <i>PhoneNumber:</i>
            @Html.TextBoxFor(t => t.PhoneNumber, new { @class = "form-control" })
        </label>
        <label>
            <i>GameAccount:</i>
            @Html.TextBoxFor(t => t.GameAccount, new { @class = "form-control" })
        </label>
        <label>
            <i>Email:</i>
            @Html.TextBoxFor(t => t.Email, new { @class = "form-control" })
        </label>
        <label>
            <i>isVerifiedGameAccount:</i>
            @Html.CheckBoxFor(t => t.isVerifiedGameAccount, new { @class = "form-control" })
        </label>
        <label>
            <i>isBlock:</i>
            @Html.CheckBoxFor(t => t.isBlock, new { @class = "form-control" })
        </label>
        <button type="button" id="btnUpdate" class="btn btn-success d-block mx-auto mt-2">@(Model.Id==Guid.Empty?"Thêm mới":"Cập nhật")</button>
    </div>
</div>